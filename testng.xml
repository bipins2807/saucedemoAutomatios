<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="SauceDemoSuite" parallel="tests" thread-count="3">

    <!-- Valid Checkout scenario across browsers -->
    <test name="ValidCheckout-Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <test name="ValidCheckout-Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <test name="ValidCheckout-Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <!-- Invalid Login scenario across browsers -->
    <test name="InvalidLogin-Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <test name="InvalidLogin-Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <test name="InvalidLogin-Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <!-- Multiple Products scenario across browsers -->
    <test name="MultipleProducts-Chrome">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <test name="MultipleProducts-Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

    <test name="MultipleProducts-Edge">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.hybrid.framework.tests.CheckoutTests"/>
        </classes>
    </test>

</suite>
